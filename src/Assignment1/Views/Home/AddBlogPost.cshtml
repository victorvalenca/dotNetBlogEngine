@using Microsoft.AspNetCore.Http
@model Assignment1.Models.BlogPost

@{
    Layout = "_Layout";
    ViewBag.Title = "Create new post";
}
<div class="container">
    <form asp-controller="Home" asp-action="AddBlogPost" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Title"type="text" placeholder="Title"/>
            </div>
            <textarea asp-for="Content" type="text" data-length="2000" class="materialize-textarea"></textarea>
            <button class="btn waves-effect wwaves-light" type="submit">Submit</button>
        </div>
    </form>
</div>