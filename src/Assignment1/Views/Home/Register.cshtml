@model Assignment1.Models.User

@{
    Layout = "_Layout";
    ViewBag.Title = "Register on Blogger";
}
<div class="container">
    <form asp-controller="Home" asp-action="Register" method="post" class="col s12">
        <div class="row">

            <div class="input-field col s6">
                <input asp-for="FirstName" type="text" name="FirstName" placeholder="First Name" class="validate" required />
            </div>
            <div class="input-field col s6">
                <input asp-for="LastName" type="text" name="LastName" placeholder="Last Name" class="validate" required />
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="EmailAddress" type="email" name="EmailAddress" placeholder="Email Address" required />
            </div>
            <div class="input-field col s12">
                <input asp-for="Password" type="password" name="Password" placeholder="Password" required />
            </div>
        </div>
        <input type="hidden" asp-for="RoleId" name="RoleId" value="1" />
        <button class="btn btn-large waves-light" type="submit">Submit</button>
    </form>
</div>

